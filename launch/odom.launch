<launch>
	<!-- Arguments -->
	<arg name="map_file" default="$(find harurobo2022)/map/map_world_CG.yaml"/>
	<arg name="open_rviz" default="true"/>
	<arg name="cmd_vel_topic" default="/cmd_vel"/>
	<arg name="scan_topic" default="/scan"/>
	<arg name="Field" default="Red"/>

	<!-- Map server -->
	<node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

	<!-- AMCL -->
	<include file="$(find harurobo2022)/launch/amcl.launch">
		<arg name="scan_topic" value="$(arg scan_topic)"/>
	</include>

	<!-- rviz -->
	<group if="$(eval Field == 'Red')">
		<group if="$(arg open_rviz)">
			<node pkg="rviz" type="rviz" name="rviz" required="true"
				args="-d $(find harurobo2022)/rviz/odom_r.rviz"/>
		</group>
	</group>
	<group if="$(eval Field == 'Blue')">
		<group if="$(arg open_rviz)">
			<node pkg="rviz" type="rviz" name="rviz" required="true"
				args="-d $(find harurobo2022)/rviz/odom_b.rviz"/>
		</group>
	</group>
</launch>
